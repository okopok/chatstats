<canvas id="{{ templateKey }}_canvas" width="400"
        height="{% if data|length > 10 %}{{ data|length * 10 }}{% else %}100{% endif %}"></canvas>
<script>
    $(function () {
        new Chart('{{ templateKey }}_canvas', {
                type: 'horizontalBar',
                data: {
                    labels: {{ data|keys|json_encode(constant('JSON_UNESCAPED_UNICODE'))|raw }},
                    datasets: [{
                        label: 'Средняя длинна сообщений',
                        data: [{{ data|join(', ')|raw }}],
                    }]
                },
                options: {
                    plugins: {
                        colorschemes: {
                            scheme: 'brewer.Paired12'
                        }
                    },
                    responsible: true,
                    animation: {
                        duration: 0 // general animation time
                    },
                    hover: {
                        animationDuration: 0 // duration of animations when hovering an item
                    },
                    responsiveAnimationDuration: 0 // animation duration after a resize
                }
            }
        );
    });
</script>
